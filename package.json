{
	"name": "breaker-box",
	"version": "2.0.0",
	"description": "A zero-dependency circuit breaker implementation for Node.js",
	"repository": "github:sirlancelot/breaker-box",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		"require": {
			"default": "./dist/index.cjs",
			"types": "./dist/index.d.cts"
		},
		"import": {
			"default": "./dist/index.mjs",
			"types": "./dist/index.d.mts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pkgroll --clean-dist --src lib --target=node18 --sourcemap --env.NODE_ENV=production",
		"dev": "vitest",
		"prepublishOnly": "npm run build",
		"test": "vitest --run"
	},
	"keywords": [
		"circuit-breaker",
		"fallback",
		"reliability",
		"try-again"
	],
	"author": "Matthew Pietz <sirlancelot@gmail.com>",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "24.3.1",
		"@vitest/coverage-v8": "3.2.4",
		"pkgroll": "2.15.4",
		"tsx": "4.20.5",
		"typescript": "5.9.2",
		"vitest": "3.2.4",
		"vitest-when": "0.8.0"
	}
}
